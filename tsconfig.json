{
  "compilerOptions": {
    "target": "ES6",                        // Specify ECMAScript target version
    "module": "commonjs",                   // Specify module code generation
    "rootDir": "src",                       // Root directory of input files
    "outDir": "dist",                       // Directory to output compiled files
    "strict": true,                         // Enable all strict type-checking options
    "esModuleInterop": true,                // Emit __importStar and __importDefault helpers
    "skipLibCheck": true,                   // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references
    "declaration": true                     // Generate .d.ts files
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
